        <record id="view_feedback_hospital_form" model="ir.ui.view">
            <field name="name">feedback.hospital.form</field>
            <field name="model">feedback.hospital</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="hospital_name"/>
                                <field name="phone_number"/>
                                <field name="email_id"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>    
                </form>
            </field>
        </record>
        <record id="view_feedback_hospital_tree" model="ir.ui.view">
            <field name="name">feedback.hospital.tree</field>
            <field name="model">feedback.hospital</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="phone_number"/>
                    <field name="email_id"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="action_feedback_hospital" model="ir.actions.act_window">
            <field name="name">Feedback</field>
            <field name="res_model">feedback.hospital</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p> Feedback of hospital from patient!!</p> 
            </field>
        </record>

        <menuitem 
        id="menu_feedback"
        name="Feedback"
        action="action_feedback_hospital"
        parent="main_feedback_master"
        sequence="0 "/>
    </data>
