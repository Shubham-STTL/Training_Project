<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="menu_feedback_form" model="website.menu">
            <field name='name'>Feedback</field>
            <field name="url">/hospital/feedback/</field>
            <field name="parent_id" ref="website.main_menu"></field>
            <field name="sequence" type="int">99</field>
        </record>
        <template id="feedback_template" name="Feedback Form">
            <t t-call="website.layout">
                <div class="container mt-5">
                    <h1 class="text-center mb-4">Feedback Form</h1>
                    <form action="/create/feedback/" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" required="True" placeholder="Name"/>
                        </div>                        
                        <div class="form-group">
                            <label for="hospital_name">Hospital Name</label>
                            <select class="form-control" name="hospital_name" required="True">
                                <option value="">Select Hospital</option>
                                <t t-foreach="hospital_names" t-as="hospital">
                                    <option t-att-value="hospital.id"><t t-esc="hospital.name"/></option>
                                </t>
                            </select>
                        </div>
                        <!-- <div class="form-group">
                            <label for="hospital_name">Hospital Name</label>
                            <input type="text" class="form-control" name="hospital_name" required="True" placeholder="Hospital Name"/>
                        </div> -->
                        <div class="form-group">
                            <label for="email_id">Email</label>
                            <input type="email" class="form-control" name="email_id" required="True" placeholder="Email"/>
                        </div>
                        <div class="form-group">
                            <label for="note">Note</label>
                            <textarea class="form-control" name="note" required="True" placeholder="Note"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="phone_number">Phone</label>
                            <input type="text" class="form-control" name="phone_number" required="True" placeholder="Phone"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
               </div>
            </t>
        </template>
