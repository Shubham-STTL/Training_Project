    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="reference"/>
                <field name="gender"/>
                <field name="age"/>
                <field name="tag_ids"/>
                <field name="total"/>     
                <field name="active"/>
                <field name="address_hospital_fetch"/>
                <field name="phone_hospital_fetch"/>
                <field name="hospital_id"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dob"/>
                            <field name="age"/>
                        </group>    
                        <group>
                            <field name="reference"/>
                            <field name="gender"/>
                            <field name="hospital_id"/>
                            <field name="address_hospital_fetch"/>
                            <field name="phone_hospital_fetch"/>
                        </group> 


                        <group>
                            <field name="total"/>     
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="active" invisible="1"/>    
                        </group>    

                    </group>
                    <notebook>
                        <page string="Patient Lines" name="patient_lines">
                            <field name="patient_line_ids">
                                <tree editable="bottom">
                                    <control>
                                        <create name="add_line_control" string="Add a line"/>
                                        <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                        <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                    </control>
                                    
                                    <field name="appointment_date"/>
                                    <field name="prescription"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>    
            </form>
        </field>
    </record>
                                    <!-- <field name="patient_id"/>
                                    <field name="appointment_date"/>
                                    <field name="note"/>
                                    <field name="age"/> -->
                                <!-- </tree> -->
    
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient Name OR Ref OR hospital_id" filter_domain="['|','|',('name', 'ilike', self), ('reference', 'ilike', self), ('hospital_id', 'ilike', self)]"/>
                <field name="reference"/>
                <field name="age"/>
                <field name="gender"/>  
                <filter name="filter_male" string="Filter Male" domain="[('gender', '=', 'male')]"/>
                <filter name="filter_female" string="Filter Female" domain="[('gender', '=', 'female')]"/>
                <separator/>        
                <!-- <filter name="filter_age" string="Filter age" domain="[('age', '&lt;=', 8)]"/>
                <separator/>  -->
                <filter name="filter_archive" string="Filter Archive" domain="[('active', '=', 'False')]"/>
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
        </field>
    </record> 

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban,graph,pivot</field>
        <field name="type">ir.actions.act_window</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p> TEST Create you first patient!!</p> 
        </field>
    </record>

    <menuitem 
        id="menu_patient"
        name="Patient Details"
        action="action_hospital_patient"
        parent="main_hospital_master"
        sequence="0 "/>

</odoo>